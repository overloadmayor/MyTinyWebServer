{
    "files.associations": {
        "exception": "cpp",
        "type_traits": "cpp",
        "new": "cpp",
        "typeinfo": "cpp",
        "string": "cpp"
    },
    "clangd.arguments": [
        "-j=4",
        "--clang-tidy",
        "--clang-tidy-checks=performance-*,bugprone-*",
        "--header-insertion=iwyu",
        "--function-arg-placeholders=false",
        "--header-insertion-decorators",
        "--ranking-model=decision_forest",
        "--completion-style=bundled",
        "--pch-storage=disk"
    ],
    "clangd.fallbackFlags": [
        "-I/usr/lib/gcc/x86_64-redhat-linux/4.8.5/include",
        "-I/opt/rh/devtoolset-8/root/usr/include",
        "-I/opt/rh/devtoolset-8/root/usr/lib/gcc/x86_64-redhat-linux/8/include",
        "-I/opt/rh/devtoolset-8/root/usr/lib/gcc/x86_64-redhat-linux/8/plugin/include",
        "-I/opt/rh/devtoolset-8/root/usr/local/include",
        "-I/usr/local/include",
        "-I/usr/include",
        "-xc++-header",
        "-std=c++14"
    ],
}